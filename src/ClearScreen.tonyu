includes Retry;

frame = 0;

new Actor{
    x=$W * 0.5, y=$H * 0.5, 
    p=$pat_bg_clear_scene, scaleX=$scrScale,
    zOrder=100,
};

retryText();

while( true ){
    frame++;
    
    if( $touches[0].touched ){
        retry();
    }
    
    if( frame % 6 === 0 ){
        new Kira{ 
            x=$W * rndFloat( 0.1, 1 ), 
            y=$H * rndFloat( 0.1, 1 )
        }; 
    }
    
    update();
};